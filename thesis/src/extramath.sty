\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{extramath}[2008/03/28 Alin's Useful Math Commands]
%
% This package provides many useful mathemtical-related commands for
% use in articles, essays, writeups, etc. Please feel free to use it,
% or adapt it to you own needs. The comments below should explain
% roughly what the various bits do.
%
\ProcessOptions\relax %relax prevents look-ahead due to * form
%
\DeclareRobustCommand{\thesismath}[1]{\ensuremath{#1}}
\DeclareRobustCommand{\parenths}[1]{\thesismath{\left({#1}\right)}}
\DeclareRobustCommand{\braces}[1]{\thesismath{\left\{{#1}\right\}}}
\DeclareRobustCommand{\angles}[1]{\thesismath{\left\langle{#1}\right\rangle}}
\DeclareRobustCommand{\sqbracs}[1]{\thesismath{\left[{#1}\right]}}
\DeclareRobustCommand{\mods}[1]{\thesismath{\left\lvert{#1}\right\rvert}}
\DeclareRobustCommand{\modsq}[1]{\thesismath{\mods{#1}^2}}
\DeclareRobustCommand{\dblmods}[1]{\thesismath{\left\lVert{#1}\right\rVert}}
\DeclareRobustCommand{\expOf}[1]{\thesismath{\exp{\!\parenths{#1}}}}
\DeclareRobustCommand{\eexp}[1]{\thesismath{e^{#1}}}
\DeclareRobustCommand{\plusquad}{\thesismath{\oplus}}
\DeclareRobustCommand{\logOf}[1]{\log\!\parenths{#1}}
\DeclareRobustCommand{\lnOf}[1]{\ln\!\parenths{#1}}
\DeclareRobustCommand{\ofOrder}[1]{\thesismath{ \mathcal{O}\parenths{#1} }}
\DeclareRobustCommand{\gref}[1]{(\ref{#1})}
\DeclareRobustCommand{\td}{\text{d}}
%\DeclareRobustCommand{\bra}[1]{\left\langle #1 \right\vert}
%\DeclareRobustCommand{\ket}[1]{\left\vert #1 \right\rangle}
\DeclareRobustCommand{\bk}[2]{\left\langle #1 \left\vert #2 \right\rangle\right.}
\DeclareRobustCommand{\poi}[1]{\left\{#1\right\}}
\DeclareRobustCommand{\de}[2]{\frac{\text{d} #1}{\text{d}#2}}
\DeclareRobustCommand{\dde}[2]{\frac{\text{d}^2 #1}{\text{d} #2 ^2}}
\DeclareRobustCommand{\p}[2]{\frac{\partial #1}{\partial #2}}
\DeclareRobustCommand{\pp}[2]{\frac{\partial^{2} #1}{\partial #2^{2}}}
\DeclareRobustCommand{\ppp}[3]{\frac{\partial^{2} #1}{\partial #2 \partial #3}}
\DeclareRobustCommand{\vd}[2]{\frac{\delta #1}{\delta #2}}
\DeclareRobustCommand{\tjm}[6]{\left( \begin{array}{ccc}
 #1 & #3 & #5 \\
 #2 & #4 & #6 \\
\end{array} \right)}
\DeclareRobustCommand{\mc}[1]{\mathcal{#1}}
\DeclareRobustCommand{\bm}[1]{{\bf #1}}
%% General utility defns
\DeclareRobustCommand{\arXivCode}[1]{arXiv:#1}

\DeclareRobustCommand{\Lagrangian}{\thesismath{ \mathcal{L} }\xspace}
\DeclareRobustCommand{\Hamiltonian}{\thesismath{ \mathcal{H} }\xspace}
\DeclareRobustCommand{\lagrangian}{\Lagrangian}
\DeclareRobustCommand{\hamiltonian}{\Hamiltonian}

\DeclareRobustCommand{\be}{\begin{equation}}
\DeclareRobustCommand{\ben}{\begin{equation*}}
\DeclareRobustCommand{\ee}{\end{equation}}
\DeclareRobustCommand{\een}{\end{equation*}}

%------------------------------------------------------------------------
% Reduce space around central operator in the eqnarray environment,
% using code from the jfm.cls package.

\renewenvironment{eqnarray}
  {\stepcounter{equation}%
   \let\@currentlabel=\theequation
   \global\@eqnswtrue
   \m@th
   \global\@eqcnt\z@
   \tabskip\@centering
   \let\\\@eqncr
   $$\everycr{}\halign to \displaywidth\bgroup
     \hskip\@centering$\displaystyle\tabskip\z@skip{##}$\@eqnsel
   &\global\@eqcnt\@ne \hfil${\;##\;}$\hfil
   &\global\@eqcnt\tw@
     $\displaystyle\tabskip\z@skip{##}$\hfil \tabskip\@centering
   &\hb@xt@\z@\bgroup\hss##\egroup
     \tabskip\z@skip \cr}
  {\@@eqncr\egroup\global\advance\c@equation\m@ne
   $$\global\@ignoretrue}


